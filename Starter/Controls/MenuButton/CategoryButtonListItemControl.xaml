<UserControl x:Class="Starter.CategoryButtonListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Starter"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <Border d:DataContext="{x:Static local:MenuButtonListItemDesignModel.Instance}">

        <Grid>
            <Button Content="{Binding Name}" Command="{Binding ButtonCommand}" />
        </Grid>

    </Border>
</UserControl>
